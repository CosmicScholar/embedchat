<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <table class="table">
      <thead>
        <tr>
          <th>From</th>
          <th>To</th>
          <th>Message</th>
          <th>Created At</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= for message <- @messages do %>
          <tr>
            <td><%= sent_by(message, @conn.assigns.current_user) %></td>
            <td><%= received_by(message, @conn.assigns.current_user) %></td>
            <td><%= message.body %></td>
            <td><%= message.inserted_at %></td>
            <td class="text-right">
              <%= link "Delete", to: message_path(@conn, :delete, message), method: :delete, data: [confirm: "Are you sure?"], class: "" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link "New message", to: message_path(@conn, :new) %>

  </div>
</div>
