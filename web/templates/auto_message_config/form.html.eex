<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select">
    <%= text_input f, :current_url_pattern, class: "mdl-textfield__input", type: "text", id: "select_current_url_pattern", readonly: "readonly", tabIndex: -1 %>
    <label class="mdl-textfield__label" for="select_current_url_pattern">IF URL</label>
    <ul class="mdl-menu mdl-menu--bottom-left mdl-js-menu" for="select_current_url_pattern">
      <li class="mdl-menu__item">=</li>
      <li class="mdl-menu__item">!=</li>
      <li class="mdl-menu__item">include</li>
      <li class="mdl-menu__item">regex</li>
    </ul>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= text_input f, :current_url, class: "mdl-textfield__input", type: "text", id: "input_current_url" %>
    <label class="mdl-textfield__label" for="input_current_url">URL</label>
    <%= error_tag f, :current_url %>
  </div>

  <br/>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select">
    <%= text_input f, :visit_view_pattern, class: "mdl-textfield__input", type: "text", id: "select_visit_view_pattern", readonly: "readonly", tabIndex: -1 %>
    <label class="mdl-textfield__label" for="select_visit_view_pattern">IF URL Visit View</label>
    <ul class="mdl-menu mdl-menu--bottom-left mdl-js-menu" for="select_visit_view_pattern">
      <li class="mdl-menu__item">=</li>
      <li class="mdl-menu__item">!=</li>
      <li class="mdl-menu__item"><</li>
      <li class="mdl-menu__item">></li>
    </ul>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= number_input f, :visit_view, class: "mdl-textfield__input", id: "visit_view_input", type: "text", pattern: "-?[0-9]*?" %>
    <%= label f, :visit_view, class: "mdl-textfield__label", for: "visit_view_input" %>
    <span class="mdl-textfield__error">Input is not a number!</span>
    <%= error_tag f, :visit_view %>
  </div>

  <br/>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select">
    <%= text_input f, :referrer_pattern, class: "mdl-textfield__input", type: "text", id: "select_referrer_pattern", readonly: "readonly", tabIndex: -1 %>
    <label class="mdl-textfield__label" for="select_referrer_pattern">IF Referrer URL</label>
    <ul class="mdl-menu mdl-menu--bottom-left mdl-js-menu" for="select_referrer_pattern">
      <li class="mdl-menu__item">=</li>
      <li class="mdl-menu__item">!=</li>
      <li class="mdl-menu__item">include</li>
      <li class="mdl-menu__item">regex</li>
    </ul>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= text_input f, :referrer, class: "mdl-textfield__input", type: "text", id: "input_referrer" %>
    <%= label f, :referrer, class: "mdl-textfield__label", for: "input_referrer" %>
    <%= error_tag f, :referrer %>
  </div>

  <br/>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select">
    <%= text_input f, :language_pattern, class: "mdl-textfield__input", type: "text", id: "select_language_pattern", readonly: "readonly", tabIndex: -1 %>
    <label class="mdl-textfield__label" for="select_language_pattern">IF Language</label>
    <ul class="mdl-menu mdl-menu--bottom-left mdl-js-menu" for="select_language_pattern">
      <li class="mdl-menu__item">=</li>
      <li class="mdl-menu__item">!=</li>
    </ul>
  </div>


  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= text_input f, :language, class: "mdl-textfield__input", type: "text", id: "input_language" %>
    <%= label f, :language, class: "mdl-textfield__label", for: "input_language" %>
    <%= error_tag f, :language %>
  </div>

  <br/>

  <% # TODO: refactoring %>
  <%= if length(@rooms) <= 1 do %>
    <div style="display:none">
  <% end %>
  <% room = List.first(@rooms) %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select">
    <%= text_input f, :room_id, class: "mdl-textfield__input", value: room.id, type: "text", id: "select_room_id", readonly: "readonly", tabIndex: -1 %>
    <label class="mdl-textfield__label" for="select_room_id">Room</label>
    <ul class="mdl-menu mdl-menu--bottom-left mdl-js-menu" for="select_room_id">
      <%= for room <- @rooms do %>
        <li class="mdl-menu__item"><%= room.id %></li>
      <% end %>
    </ul>
  </div>
  <%= if length(@rooms) <= 1 do %>
    </div>
  <% end %>

  <br/>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= textarea f, :message, class: "mdl-textfield__input", type: "text", rows: 2, id: "input_message" %>
    <%= label f, :message, class: "mdl-textfield__label", for: "input_message" %>
    <%= error_tag f, :message %>
  </div>

  <br/><br/>

  <p>
    <%= submit "Submit", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
  </p>

<% end %>
