<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp mdl-cell mdl-cell--12-col">
      <thead>
        <tr>
          <th class="mdl-data-table__cell--non-numeric">ID</th>
          <th class="mdl-data-table__cell--non-numeric"><%= gettext "Email" %></th>
          <th class="mdl-data-table__cell--non-numeric"><%= gettext "Name" %></th>
          <th class="mdl-data-table__cell--non-numeric"><%= gettext "Created At" %></th>
          <th class="mdl-data-table__cell--non-numeric"><%= gettext "Updated At" %></th>
          <th class="mdl-data-table__cell--non-numeric">Action</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= for user <- @users do %>
          <tr>
            <td class="mdl-data-table__cell--non-numeric">
              <%= user.id %>
            </td>
            <td class="mdl-data-table__cell--non-numeric">
              <%= user.email %>
            </td>
            <td class="mdl-data-table__cell--non-numeric">
              <%= user.name %>
            </td>
            <td class="mdl-data-table__cell--non-numeric">
              <%= user.inserted_at %>
            </td>
            <td class="mdl-data-table__cell--non-numeric">
              <%= user.updated_at %>
            </td>
            <td class="mdl-data-table__cell--non-numeric">
              <%= link gettext("Impersonate"),
                       to: admin_impersonation_path(@conn, :impersonate, to_string(user.id)),
                       method: :post,
                       class: "mdl-button mdl-js-button mdl-button--raised" %>
            </td>
            <td>
              <%= link gettext("Edit"), to: admin_user_path(@conn, :edit, user), class: "mdl-button mdl-js-button mdl-button--raised" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <center>
      <div class="nav-page">
        <%= pagination_links @conn, @users %>
      </div>
    </center>
    <br/>
    <br/>
  </div>
</div>

